<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.haulmont.addon.ldap.entity.DefaultMatchingRule"
          extends="_local"
          name="defaultMatchingRule-with-group-roles-order">
        <property name="accessGroup"
                  view="_minimal"/>
        <property name="roles"
                  view="_minimal"/>
        <property name="order"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.addon.ldap.entity.SimpleMatchingRule"
          extends="_local"
          name="simpleMatchingRule-view-with-group-roles-conditions-order">
        <property name="accessGroup"
                  view="_minimal"/>
        <property name="roles"
                  view="_minimal"/>
        <property name="conditions"
                  view="_local">
            <property name="simpleMatchingRule"
                      view="_minimal"/>
        </property>
        <property name="order"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.cuba.security.entity.UserRole"
          extends="_local"
          name="user-role-view-with-role">
        <property fetch="JOIN"
                  name="role"
                  view="_local"/>
    </view>
    <view class="com.haulmont.cuba.security.entity.User"
          extends="_local"
          name="sec-user-view-with-group-roles">
        <property fetch="JOIN"
                  name="group"
                  view="_local"/>
        <property fetch="JOIN"
                  name="userRoles"
                  view="user-role-view-with-role"/>
    </view>
</views>

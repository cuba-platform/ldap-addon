<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.addon.ldap.web.ldapuserattribute">
    <data>
        <instance id="ldapUserAttributeDs" class="com.haulmont.addon.ldap.entity.LdapUserAttribute" view="_local"/>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="fieldGroup" dataContainer="ldapUserAttributeDs">
            <column width="250px">
                <field property="attributeName"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
